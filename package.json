{
  "name": "tv-maze-app",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:4000",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.25.0",
    "cypress": "https://cdn.cypress.io/beta/npm/10.0.0/darwin-x64/circle-10.0-release-faa8fb5302ae8fac4ac53f1dcd214abe35bce3ab/cypress.tgz",
    "node-sass": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-select": "^5.2.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "server": "cross-env node server.js",
    "cy:clear": "cypress cache clear",
    "cy:open": "cross-env cypress open",
    "start:tests": "cross-env start-server-and-test start http://localhost:3000 server http://localhost:4000 cy:open",
    "cy:run": "cross-env cypress run",
    "ci:tests": "cross-env start-server-and-test start http://localhost:3000 server http://localhost:4000 cy:run",
    "build": "cross-env react-scripts build",
    "test": "cross-env react-scripts test",
    "setup": "node setup.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "extends": [
          "plugin:cypress/recommended"
        ],
        "files": [
          "cypress/**/*.js"
        ],
        "rules": {
          "testing-library/await-async-utils": 0,
          "jest/valid-expect-in-promise": 0
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^5.12.3",
    "@cypress/webpack-dev-server": "^1.8.1",
    "cross-env": "^7.0.3",
    "eslint-plugin-cypress": "^2.12.1",
    "json-server": "^0.17.0",
    "start-server-and-test": "^1.14.0"
  }
}
